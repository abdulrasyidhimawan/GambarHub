<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".detailbuku">

    <ImageView
        android:id="@+id/detailbuku_viewCoverBuku"
        android:layout_width="147dp"
        android:layout_height="237dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailbuku_tombolKembali"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/detailbuku_tombolBaca"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primary"
        android:text="Baca Buku"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/detailbuku_tombolFavorit"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailbuku_viewCoverBuku" />

    <Button
        android:id="@+id/detailbuku_tombolFavorit"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#008000"
        android:text="Favorit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailbuku_viewSinopsisBuku" />

    <TextView
        android:id="@+id/detailbuku_labelJudulBuku"
        android:layout_width="156dp"
        android:layout_height="73dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="88dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/detailbuku_viewCoverBuku"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailbuku_viewSinopsisBuku"
        android:layout_width="157dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toEndOf="@+id/detailbuku_viewCoverBuku"
        app:layout_constraintTop_toBottomOf="@+id/detailbuku_labelJudulBuku" />

    <ImageButton
        android:id="@+id/detailbuku_tombolKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:backgroundTint="@color/primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>